{
    "opt_parameters": {
        "run_filename_template": "run_",
        "template_filename": "template.lammps",
        "iterations": 1000,
        "sampler": "TPE"
    },
    "model_parameters": {
        "mode": {
            "type": "categorical",
            "usage": "cli",
            "key": "mode",
            "values": [
                "1gpu",
                "cpu",
                "2gpu"
            ]
        },
        "RNEIGH": {
            "type": "float",
            "usage": "script",
            "min": 0.2,
            "max": 30.0,
            "step": 0.1,
            "log" : "True"
        },
        "nproc": {
            "type": "int",
            "usage": "cli",
            "key": "nproc",
            "min": 1,
            "max": 12,
            "step": 1
        },
        "BALANCE": {
            "type": "categorical",
            "usage": "script",
            "values": {
                "shift": "fix fixbalance all balance 1000 1.05 shift xy 10 1.05",
                "rcb": "comm_style tiled\n                                fix fixbalance all balance 1000 1.05 rcb",
                "none": "#No balancing"
            }
        }
    }
}